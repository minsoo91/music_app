<h1><%= @band.name %></h1>

<ul>
	<% Album.all.each do |album| %>
		<% if album.band_id == @band.id %>
	  		<li><%= link_to album.name, album_url(album) %></li>
	  	<% end %>
	<% end %>
</ul>

<%= button_to "Create New Album!", new_band_album_url(@band), method: :get %>
<%= button_to "Delete Band!", band_url(@band), method: :delete %>
<%= button_to "Back to All Bands", bands_url, method: :get %>